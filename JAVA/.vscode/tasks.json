{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "run java file",
      "type": "shell",
      "command": "javac -encoding UTF-8 \"${file}\" && java -Dfile.encoding=UTF-8 \"${fileBasenameNoExtension}\"",
      "group": {
          "kind": "build",
          "isDefault": true
      },
      "presentation": {
          "reveal": "always"
      },
      "problemMatcher": [],
      "args": [
        "-encoding",
        "UTF-8",
        "${file}"
      ]
    }
  ]
}